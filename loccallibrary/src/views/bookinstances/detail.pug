extends ../layout

block content
  div(class='container-fluid')
    div(class='row') 
      div(class='col-sm-2')
        block sidebar
          ul(class='sidebar-nav')
            li
              a(href='/') #{t('home.local_library')}
            li
              a(href='/books/list') #{t('home.book')}
            li
              a(href='/authors/list') #{t('home.author')}
            li
              a(href='/genres/list') #{t('home.genre')}
            li
              a(href='/bookInstances/list') #{t('home.book_instance')}

      hr()

      div(class='col-sm-2')
        block sidebar
          ul(class='sidebar-nav')
            li
              a(href='/authors/create') #{t('home.create_author')}
            li
              a(href='/genres/create') #{t('home.create_genre')}
            li
              a(href='/books/create') #{t('home.create_book')}
            li
              a(href='/bookInstances/create') #{t('home.create_bookinstance')}
      div(class='row-sm-2')
        block sidebar
          ul(class='sidebar-nav')
            li(class='inline')
              a(href=`/bookInstances/${bookInstance.id}/detail?lang=en`) #{t('home.english_translations')}
            li(class='inline-between') 
              p |
            li(class='inline') 
              a(href=`/bookInstances/${bookInstance.id}/detail?lang=vi`) #{t('home.vietnamese_translations')}
            .content
            h1 #{t('home.id')}: #{bookInstance.id}
            span #{t('home.title')}:  
            a(href=`/books/${bookInstance.book.id}/detail`)  #{bookInstance.book.title}
            p #{t('home.imprint')}: #{bookInstance.imprint}
            p #{t('home.status')}: #{bookInstance.status}
            if bookInstance.status != 'Available'
              p #{t('home.dueback')}: #{bookInstance.due_back}
    a(href=`/bookInstances/${bookInstance.id}/delete`) #{t("bookinstance.delete")}
