{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"],
  "exclude": ["src/public/", "@types/**/*"]
}
